<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <packaging>jar</packaging>
    <artifactId>build-report</artifactId>
    <description>
        Dummy module to aggregate the JaCoCo reports
    </description>

    <parent>
        <groupId>com.github.diogenes1oliveira</groupId>
        <artifactId>hbase-utils-parent</artifactId>
        <version>0.1.0-alpha.1-SNAPSHOT</version>
    </parent>

    <properties>
    </properties>

    <dependencies>
        <dependency>
            <groupId>com.github.diogenes1oliveira</groupId>
            <artifactId>hbase-connector</artifactId>
        </dependency>
        <dependency>
            <groupId>com.github.diogenes1oliveira</groupId>
            <artifactId>hbase-schema-api</artifactId>
        </dependency>
        <dependency>
            <groupId>com.github.diogenes1oliveira</groupId>
            <artifactId>hbase-schema-connector</artifactId>
        </dependency>
        <dependency>
            <groupId>com.github.diogenes1oliveira</groupId>
            <artifactId>hbase-test-utils</artifactId>
        </dependency>
        <dependency>
            <groupId>com.github.diogenes1oliveira</groupId>
            <artifactId>hadoop-auth-utils</artifactId>
        </dependency>
        <dependency>
            <groupId>com.github.diogenes1oliveira</groupId>
            <artifactId>hbase-base-types</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
                <configuration>
                    <dataFile>${user.dir}/jacoco.exec</dataFile>
                </configuration>
                <executions>
                    <execution>
                        <id>jacoco-initialize</id>
                        <phase>test-compile</phase>
                        <goals>
                            <goal>prepare-agent</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>jacoco-merge-results</id>
                        <phase>test</phase>
                        <goals>
                            <goal>merge</goal>
                        </goals>
                        <configuration>
                            <!-- I don't like hardcoding these modules, but for now it seems to work -->
                            <!-- Merging like this does lose the module information, all we have is Java package names -->
                            <fileSets>
                                <fileSet>
                                    <directory>${user.dir}/hbase-connector/target/</directory>
                                    <includes>
                                        <include>*.exec</include>
                                    </includes>
                                </fileSet>
                                <fileSet>
                                    <directory>${user.dir}/hbase-schema-api/target/</directory>
                                    <includes>
                                        <include>*.exec</include>
                                    </includes>
                                </fileSet>
                                <fileSet>
                                    <directory>${user.dir}/hbase-schema-connector/target/</directory>
                                    <includes>
                                        <include>*.exec</include>
                                    </includes>
                                </fileSet>
                                <fileSet>
                                    <directory>${user.dir}/hbase-test-utils/target/</directory>
                                    <includes>
                                        <include>*.exec</include>
                                    </includes>
                                </fileSet>
                                <fileSet>
                                    <directory>${user.dir}/hadoop-auth-utils/target/</directory>
                                    <includes>
                                        <include>*.exec</include>
                                    </includes>
                                </fileSet>
                                <fileSet>
                                    <directory>${user.dir}/hbase-base-types/target/</directory>
                                    <includes>
                                        <include>*.exec</include>
                                    </includes>
                                </fileSet>
                            </fileSets>
                            <destFile>${user.dir}/target/jacoco-aggregated.exec</destFile>
                        </configuration>
                    </execution>
                    <execution>
                        <id>jacoco-site-aggregate</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>report-aggregate</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${user.dir}/target/jacoco/</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
